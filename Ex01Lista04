#include <stdio.h>
/*  Escreva um programa que receba um valor. Se esse valor for par, ele escreve uma 
mensagem na tela e pede um novo valor. Se o valor for ímpar, ele escreve uma mensagem
na tela e termina.*/
int main(void) {
  int n1,n2;
  printf("Escolha um numero: ");
  do{
    scanf("%d", &n1);
    if(n1%2==0){
      printf("Escolha outro numero: ");
    
      
    }else{
      printf("Seu numero %d é impar!!!",n1);
    }
  }while(n1%2==0);

  return 0;
}
